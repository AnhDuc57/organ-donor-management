<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login1"
    android:orientation="vertical"
    tools:context=".DisplayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Welcome"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_dehaze_24"
            app:srcCompat="@drawable/ic_baseline_dehaze_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonOrganDonor"
        android:layout_width="352dp"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:backgroundTint="#30B0EA"
        android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
        android:text="Organ Donors"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonViscera"
        android:layout_width="352dp"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#30B0EA"
        android:drawableLeft="@drawable/ic_baseline_diversity_2_24"
        android:text="Viscera"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="352dp"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#30B0EA"
        android:drawableLeft="@drawable/ic_baseline_app_registration_24"
        android:text="Register To Donate Organs"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="352dp"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#30B0EA"
        android:drawableLeft="@drawable/ic_baseline_health_and_safety_24"
        android:text="Health Check"
        android:textSize="24sp" />

</LinearLayout>